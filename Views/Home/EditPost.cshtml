@using Project.Models;
@using Project.ViewModels;
@model ViewModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>My Website</title>

    <link rel="stylesheet" href="~/styles/EditPost.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" />
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    @await Html.PartialAsync("_nav")
    <div class="createUser">
        <div class="createUser-container">
            <h1>Edit Post</h1>
            <form class="createUser-form" action="post" method="post">
                <input type="hidden" name="Id" value="@Model.Post.Id" />

                <label class="createUser-form-label" for="Header">Title:</label>
                <input class="createUser-form-input"
                       type="text"
                       id="Header"
                       name="Header"
                       value="@Model.Post.Header"
                       required /><br />

                <label class="createUser-form-label" for="Body">Text:</label>
                <input class="createUser-form-input"
                       type="text"
                       id="Body"
                       name="Body"
                       value="@Model.Post.Body"
                       required /><br />

                <label class="createUser-form-label " for="UserIncognito">Post Anonymously?</label>

                <button class="createUser-form-button" type="submit">Edit post</button>
            </form>
        </div>
    </div>
</body>
</html>